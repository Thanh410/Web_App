{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "src/app/page.tsx",
    "src/utils/db.tsx",
    "src/app/api/posts/route.tsx",
    "src/app/dashboard/page.tsx",
    "src/app/api/auth/[...nextauth]/[nextauth].js",
    "src/app/api/auth/register/route.tsx",
    "src/models/Users.tsx"
  ],
  "exclude": ["node_modules"]
}
